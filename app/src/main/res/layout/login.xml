<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@drawable/bgfinal"

    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       android:layout_gravity="center"
        android:layout_marginTop="80dp"


        >





        <LinearLayout android:layout_width="match_parent"
            android:layout_height="40dip"
            android:orientation="horizontal"
            android:layout_marginLeft="40dip"
            android:layout_marginRight="40dip"
            android:layout_marginTop="30dip"
            android:gravity="center_vertical"
            android:background="@drawable/bordergray_table_topradius_ontrans"

            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:background="@null"
                android:ems="10"
                android:id="@+id/login_name"
                android:hint="用户名/手机号码"



                android:singleLine="true" >

                <requestFocus />
            </EditText>

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="40dip"
            android:orientation="horizontal"
            android:layout_marginLeft="40dip"
            android:layout_marginRight="40dip"
            android:gravity="center_vertical"

            android:background="@drawable/bordergray_tablen_bottomradius_ontrans"

            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:background="@null"
                android:password="true"
                android:ems="10"
                android:hint="密码"

                android:id="@+id/login_pass"
                android:singleLine="true" >

                <requestFocus />
            </EditText>

        </LinearLayout>
        <CheckBox android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:layout_gravity="left"
            android:layout_marginLeft="40dp"
            android:textColor="@color/black"
            android:text="自动登录"
            android:id="@+id/autologin"
            android:checked="false" />
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="40dip"
            android:orientation="horizontal"
            android:layout_marginLeft="40dip"
            android:layout_marginRight="40dip"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:id="@+id/login"
            android:background="@drawable/btn_red5_selector"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登  录"


                android:textColor="@color/title_blue"
                android:textSize="20dp"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>