<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"

        >



    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="0"

        android:background="@drawable/bg_white_trans"
        >
        <LinearLayout
            android:id="@+id/bar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="BaronClick"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/mainbar_img1"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginTop="5dip"
                android:src="@drawable/logo11" />

            <TextView
                android:id="@+id/mainbar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:onClick="onclickMainbar"
                android:text="业务消息"
                android:textSize="12dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="BaronClick"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/mainbar_img2"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginTop="5dip"
                android:src="@drawable/logo11" />

            <TextView
                android:id="@+id/mainbar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:gravity="center_horizontal"
                android:onClick="onclickMainbar"
                android:text="我的订单"
                android:textColor="@color/black"
                android:textSize="12dip" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="BaronClick"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/mainbar_img3"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginTop="5dip"
                android:src="@drawable/logo11" />

            <TextView
                android:id="@+id/mainbar3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:gravity="center_horizontal"
                android:onClick="onclickMainbar"
                android:text="地图"
                android:textColor="@color/black"
                android:textSize="12dip" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bar4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="BaronClick"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/mainbar_img4"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginTop="5dip"
                android:src="@drawable/logo11" />

            <TextView
                android:id="@+id/mainbar4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:gravity="center_horizontal"
                android:onClick="onclickMainbar"
                android:text="个人设置"
                android:textColor="@color/black"
                android:textSize="12dip" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
