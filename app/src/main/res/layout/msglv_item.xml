<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/msg_item_back"
    >

    <ImageView
        android:layout_width="30dp"
        android:layout_height="24dp"
        android:src="@drawable/msgimg"

        android:id="@+id/msg_img"
        android:layout_marginLeft="15dp"
        android:scaleType="centerCrop"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/msg_img"
        android:layout_centerVertical="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/msg_bianhao"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="业务编号:"
                android:textSize="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:id="@+id/msg_workID"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:text="3123124124"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/msg_img"
            android:layout_below="@id/msg_bianhao"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="安装工人:"
                android:textSize="15dp"

                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:id="@+id/msg_workerName"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:text="张三"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_ID"
                android:visibility="gone"
                />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/right4"/>

</RelativeLayout>