<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_blue"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
           >

            <TextView
                android:layout_width="60dp"
                android:gravity="center"
                android:layout_height="30dp"
                android:text="已妥投"
                android:textColor="@color/white"
                android:id="@+id/tuotou_tv"
                android:background="@drawable/bordergray_table_leftradius_ontrans_pressed"
                android:textSize="13dp"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:textSize="13dp"
                android:gravity="center"
                android:textColor="@color/red"
                android:id="@+id/untuotou_tv"
                android:background="@drawable/bordergray_table_rightradius_ontrans"
                android:text="未妥投"/>
        </LinearLayout>


    </LinearLayout>

    <com.wgz.ant.antinstall.view.RefreshableView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/refreshable_view2">


        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/untuotou_lv"></ListView>


    </com.wgz.ant.antinstall.view.RefreshableView>
    <com.wgz.ant.antinstall.view.RefreshableView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/refreshable_view3"
        android:visibility="visible"
        >
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"

            android:id="@+id/tuotou_lv"></ListView>


    </com.wgz.ant.antinstall.view.RefreshableView>
</LinearLayout>