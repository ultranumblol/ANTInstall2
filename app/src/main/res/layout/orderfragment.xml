<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18dp"

            android:text="订 单"

            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="90dp"
            android:gravity="center"
            android:layout_height="40dp"
            android:text="已妥投"
            android:id="@+id/tuotou_tv"
            android:background="@drawable/bordergray_table_leftradius_ontrans"
            android:textSize="17dp"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:textSize="17dp"
            android:gravity="center"
            android:id="@+id/untuotou_tv"
            android:background="@drawable/bordergray_table_rightradius_ontrans"
            android:text="未妥投"/>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/untuotou_lv"></ListView>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:id="@+id/tuotou_lv"></ListView>
</LinearLayout>